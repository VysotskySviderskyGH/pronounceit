<resources>

    <!-- Base application theme -->
    <style name="PITheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet.StyleDialog</item>
    </style>

    <!-- Dialog theme -->
    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="bs_dialogBackground">@color/s_background</item>
        <item name="bs_numColumns">3</item>
        <item name="android:textColorPrimary">@color/s_menu_text_color</item>
        <item name="android:textColorSecondary">@color/s_menu_text_color</item>
        <item name="android:textColorHint">@color/s_menu_text_color</item>
    </style>

    <!-- Transparent activity -->
    <style name="Theme.Transparent" parent="PITheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/s_black_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
