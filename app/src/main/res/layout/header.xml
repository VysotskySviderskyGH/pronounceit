<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/header_view">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_title_d_height"
        android:gravity="center_horizontal"
        android:paddingBottom="0dp"
        android:paddingTop="@dimen/header_title_padding"
        android:text="@string/title"
        android:textColor="@color/s_blue"
        android:textSize="@dimen/header_title_height" />

    <TextView
        android:id="@+id/txt_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/slogan"
        android:textColor="@android:color/black"
        android:textSize="@dimen/header_slogan_height" />
</LinearLayout>